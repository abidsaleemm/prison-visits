<div id='cancel-visit'>
  <h2><%= t('visits.shared.cancel_title') %></h2>

  <p><%= t('visits.shared.cancel_intro') %></p>

  <%= form_tag(cancellations_path, html: { class: 'js-SubmitOnce' }) do %>
    <%= hidden_field_tag(:id, @visit.id) %>

    <div class="group">
      <label class="block-label">
        <%= check_box_tag(:confirmed) %>
        <%= t('visits.shared.cancel_confirm') %>
      </label>
    </div>

    <div class='actions'>
      <div class="primary-actions">
        <%= submit_tag(t('visits.shared.cancel_cta'), class: 'button button-primary') %>
      </div>
    </div>
  <% end %>
</div>
